<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Список объектов:</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Meta</th>
        <th class="click-width"></th>
        <th class="click-width"></th>
        <th class="click-width"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.meta %></td>
          <td><%= link_to(item) do %><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><%end%></td>
          <td><%= link_to(edit_item_path(item)) do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%end%></td>
          <td><%= link_to(item, method: :delete, data: { confirm: 'Уверены?' }) do %><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить', new_item_path %>
</div>

<div class="container">
  <h1>Список объектов:</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Meta</th>
        <th class="click-width"></th>
        <th class="click-width"></th>
        <th class="click-width"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.meta %></td>
          <td><%= link_to(item) do %><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><%end%></td>
          <td><%= link_to 'Редактировать', edit_item_path(item) %></td>
          <td><%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить', new_item_path %>
</div>


<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
<span class="glyphicon glyphicon-info-euro" aria-hidden="true"></span>
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
